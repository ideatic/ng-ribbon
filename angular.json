{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "ng-ribbon-example": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "less"
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "i18n": {
        "sourceLocale": "es"
      },
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/ng-ribbon-example",
            "index": "src/index.html",
            "main": "src/main.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.app.json",
            "preserveSymlinks": true,
            "aot": true,
            "localize": true,
            "assets": [
              "src/favicon.ico",
              "src/assets",
              {
                "glob": "**/*",
                "input": "projects/ng-ribbon-wysiwyg/src/assets",
                "output": "./assets/ribbon/"
              }
            ],
            "styles": [
              "src/styles/styles.less"
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "commonChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb",
                  "maximumError": "10kb"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "ng-ribbon-example:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "ng-ribbon-example:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "ng-ribbon-example:build"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "tsconfig.app.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        },
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "e2e/protractor.conf.js",
            "devServerTarget": "ng-ribbon-example:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "ng-ribbon-example:serve:production"
            }
          }
        }
      }
    },
    "ng-ribbon": {
      "projectType": "library",
      "root": "projects/ng-ribbon",
      "sourceRoot": "projects/ng-ribbon/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "projects/ng-ribbon/tsconfig.lib.json",
            "project": "projects/ng-ribbon/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/ng-ribbon/tsconfig.lib.prod.json"
            }
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/ng-ribbon/src/test.ts",
            "tsConfig": "projects/ng-ribbon/tsconfig.spec.json",
            "karmaConfig": "projects/ng-ribbon/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "projects/ng-ribbon/tsconfig.lib.json",
              "projects/ng-ribbon/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    },
    "ng-ribbon-wysiwyg": {
      "projectType": "library",
      "root": "projects/ng-ribbon-wysiwyg",
      "sourceRoot": "projects/ng-ribbon-wysiwyg/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "projects/ng-ribbon-wysiwyg/tsconfig.lib.json",
            "project": "projects/ng-ribbon-wysiwyg/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/ng-ribbon-wysiwyg/tsconfig.lib.prod.json"
            }
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/ng-ribbon-wysiwyg/src/test.ts",
            "tsConfig": "projects/ng-ribbon-wysiwyg/tsconfig.spec.json",
            "karmaConfig": "projects/ng-ribbon-wysiwyg/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "projects/ng-ribbon-wysiwyg/tsconfig.lib.json",
              "projects/ng-ribbon-wysiwyg/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "ng-ribbon-example"
}
