{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "ng-ribbon": [
        "dist/ng-ribbon/ng-ribbon",
        "dist/ng-ribbon"
      ],
      "ng-ribbon-wysiwyg": [
        "dist/ng-ribbon-wysiwyg/ng-ribbon-wysiwyg",
        "dist/ng-ribbon-wysiwyg"
      ]
    },
    "useDefineForClassFields": false
  },
  "angularCompilerOptions": {
    "preserveWhitespaces": false,
    "fullTemplateTypeCheck": true,
    "strictTemplates": true,
    "strictInjectionParameters": true
  }
}
